<a href="/songs">Dashboard</a>
<h3><%= @user.first_name %> <%= @user.last_name %>'s Playlist</h3>
<table>
	<thead>
		<tr>
			<th>Artist</th>
			<th>Title</th>
			<th>Times Added</th>
		</tr>
	</thead>
	<tbody>
		<% @user.songs_added.uniq.each do |song| %>
			<tr>
				<td><%= song.artist %></td>
				<td><%= song.title %></td>
				<% # @playlist.each do |p|%>
					<td> <%= @song_count.count(song.id) %> </td>
				<% # end%>
			</tr>
		<% end%>
	</tbody>
</table>

